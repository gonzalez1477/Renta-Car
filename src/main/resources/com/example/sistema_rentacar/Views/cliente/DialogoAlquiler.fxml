<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.sistema_rentacar.Controllers.Cliente.DialogoAlquilerController"
      spacing="0" prefWidth="550" maxWidth="600" prefHeight="650" maxHeight="700"
      styleClass="dialog-container"
      style="-fx-background-color: #f8f9fa;"
      stylesheets="@../../css/estilosDialogoAlquiler.css">

    <!-- Header del di谩logo - REDUCIDO -->
    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="dialog-header"
          style="-fx-background-color: linear-gradient(to right, #2980b9, #3498db); -fx-padding: 18 25;">
        <Label text="" style="-fx-font-size: 28px;"/>
        <VBox spacing="2">
