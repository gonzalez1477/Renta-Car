                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="" style="-fx-font-size: 18px;"/>
                    <Label text="Desglose de Costos" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Region style="-fx-min-width: 35; -fx-background-color: linear-gradient(to right, #f39c12, transparent); -fx-min-height: 2;"/>
                </HBox>

                <GridPane hgap="15" vgap="10">
                    <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Dep贸sito Requerido" style="-fx-font-size: 12px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                        <TextField fx:id="txtDeposito"
                                   style="-fx-pref-height: 35px; -fx-font-size: 12px;"
                                   promptText="\$0.00" disable="true"/>
                    </VBox>

                    <VBox spacing="4" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Subtotal" style="-fx-font-size: 12px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                        <Label fx:id="lblSubtotal" text="\$0.00"
                               style="-fx-font-size: 15px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-padding: 8 0 0 0;"/>
                    </VBox>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                </GridPane>

                <!-- Total destacado -->
                <VBox spacing="8" alignment="CENTER"
                      style="-fx-background-color: linear-gradient(to right, #f39c12, #e67e22); -fx-padding: 12; -fx-background-radius: 8;">
                    <Label text="COSTO TOTAL" style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblCostoTotal" text="\$0.00" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Incluye dep贸sito + tarifa por d铆as de alquiler"
                           style="-fx-font-size: 10px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-style: italic;"/>
                </VBox>
            </VBox>

            <!-- Metodos de pago-->
            <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="" style="-fx-font-size: 18px;"/>
                    <Label text="M茅todo de Pago" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Region style="-fx-min-width: 35; -fx-background-color: linear-gradient(to right, #9b59b6, transparent); -fx-min-height: 2;"/>
                </HBox>

                <VBox spacing="12">
