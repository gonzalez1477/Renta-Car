                                 editable="true" maxWidth="Infinity"/>
                    </VBox>

                    <!-- Fecha Fin -->
                    <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                        <Label text="Fecha de Finalizaci贸n" style="-fx-font-size: 12px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                        <DatePicker fx:id="dpFechaFin"
                                    style="-fx-pref-height: 35px; -fx-font-size: 12px;"
                                    maxWidth="Infinity"/>
                    </VBox>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                </GridPane>

                <!-- Nota informativa -->
                <HBox spacing="8" alignment="CENTER_LEFT"
                      style="-fx-background-color: #e8f5e9; -fx-padding: 10; -fx-background-radius: 6;">
                    <Label text="" style="-fx-font-size: 13px;"/>
                    <Label text="La fecha de inicio es hoy. Ajuste los d铆as para calcular la fecha de finalizaci贸n."
                           style="-fx-font-size: 11px; -fx-text-fill: #2c3e50;" wrapText="true"/>
