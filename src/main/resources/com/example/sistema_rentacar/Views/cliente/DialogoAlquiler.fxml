                    </columnConstraints>
                </GridPane>
            </VBox>

            <!-- Secci贸n: Fechas y Duraci贸n -->
            <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="" style="-fx-font-size: 18px;"/>
                    <Label text="Per铆odo de Alquiler" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Region style="-fx-min-width: 35; -fx-background-color: linear-gradient(to right, #27ae60, transparent); -fx-min-height: 2;"/>
                </HBox>

                <GridPane hgap="15" vgap="12">
                    <!-- Fecha Inicio -->
                    <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Fecha de Inicio *" style="-fx-font-size: 12px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                        <DatePicker fx:id="dpFechaInicio"
                                    style="-fx-pref-height: 35px; -fx-font-size: 12px;"
