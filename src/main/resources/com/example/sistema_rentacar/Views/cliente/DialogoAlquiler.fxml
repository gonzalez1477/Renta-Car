    <!-- Contenido del di谩logo -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox spacing="16" style="-fx-padding: 20;">

            <!-- Secci贸n: Informaci贸n del Veh铆culo -->
            <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="" style="-fx-font-size: 18px;"/>
                    <Label text="Detalles del Veh铆culo" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Region style="-fx-min-width: 35; -fx-background-color: linear-gradient(to right, #3498db, transparent); -fx-min-height: 2;"/>
