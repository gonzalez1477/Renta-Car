                <GridPane hgap="15" vgap="12">
                    <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Veh铆culo" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
                        <Label fx:id="lblVehiculo" text="Toyota Corolla 2024" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                    </VBox>

                    <VBox spacing="4" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Tarifa Diaria" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
                        <Label fx:id="lblTarifa" text="\$55.00 / d铆a" style="-fx-font-size: 14px; -fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </VBox>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
